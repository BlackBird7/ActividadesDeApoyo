<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActividadesDeApoyo.Views.CatActividades.FicViCatActividadesCreate">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="StartAndExpand" Padding="20">

                <Label Text="Descripcion"/>
                <Entry Text="{Binding Actividad.DesActividad}"/>

                <Label Text="Detalle "/>
                <Entry Text="{Binding Actividad.Detalle}"/>

                <Label Text="Usuario"/>
                <Entry Text="{Binding Localidad.UsuarioReg}"/>

                <Label Text="Activo: "/>
                <Switch IsToggled="{Binding Localidad.Activo}"></Switch>

                <Label Text="Borrado: "/>
                <Switch IsToggled="{Binding Localidad.Borrado}"></Switch>

                <Button Text="Aceptar"  Command="{Binding FicMetCreateCommand}"/>
                <Button Text="Cancelar" Command="{Binding BackNavgCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>